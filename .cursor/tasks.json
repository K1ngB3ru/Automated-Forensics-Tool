                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Activate Virtual Environment",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\activate"
            },
            "linux": {
                "command": "source venv/bin/activate"
            },
            "osx": {
                "command": "source venv/bin/activate"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
