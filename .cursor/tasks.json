        {
            "label": "Clean Output Directories",
            "type": "shell",
            "windows": {
                "command": "Remove-Item -Path output/* -Recurse -Force -ErrorAction SilentlyContinue"
            },
            "linux": {
                "command": "rm -rf output/*"
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
